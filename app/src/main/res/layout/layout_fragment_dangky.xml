<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_etHoTenDK"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                    android:layout_margin="10dp">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/etHoTenDK"

                    android:inputType="textVisiblePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:hint="Họ tên đầy đủ"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_etEmail"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                android:layout_margin="10dp">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/etEmailDK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:inputType="textVisiblePassword"
                    android:hint="Địa chỉ email"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_etPhone"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                android:layout_margin="10dp">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/etPhoneDK"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:hint="Số điện thoại"
                    />
            </android.support.design.widget.TextInputLayout>

            <!--do bị lỗi Failed to inflate ColorStateList khi hiện error
            nên xài app:errorTextAppearance="@style/MyAppTheme.TextInputLayout" -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_etMK"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                android:layout_margin="10dp">
                <e.datvo_000.jp9shop.CustomView.PasswordEditText
                    android:id="@+id/etMatkhauDK"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:hint="Mật khẩu"
                    android:inputType="text"
                    app:useStrike="true"
                    app:useValidate="false"


                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
                android:id="@+id/layout_etNLMK"
                android:layout_margin="10dp">
                <e.datvo_000.jp9shop.CustomView.PasswordEditText
                    android:id="@+id/etNLMatkhauDK"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lại mật khẩu"
                    android:inputType="text"
                    android:textColor="@color/orange"
                    app:useStrike="true"
                    />
            </android.support.design.widget.TextInputLayout>
