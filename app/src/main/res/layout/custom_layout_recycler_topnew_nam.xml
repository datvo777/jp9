<?xml version="1.0" encoding="utf-8"?>
<!--xmlns : namespace Instead of calling android:id, the xml will use http://schemas.android.com/apk/res/android:id-->

   <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearTimKiem">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgTopNewNam"
            android:src="@drawable/tyler"
            android:scaleType="centerInside"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:id="@+id/tvTeudeTopNewNam"
            android:layout_gravity="center"
            android:maxLength="15"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGiaSPTopNewNam"
            android:text="giaTien"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGiamGiaSPTopNewNam"
            android:visibility="gone"/>
    </LinearLayout>

    <!--INVISIBLE:This view is invisible, but it still takes up space for layout purposes.

GONE:This view is invisible, and it doesn't take any space for layout purposes.-->
</android.support.v7.widget.CardView>