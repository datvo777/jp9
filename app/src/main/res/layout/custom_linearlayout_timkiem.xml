<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="7dp">
    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:id="@+id/linearTimKiem">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:src="@drawable/tyler"
            android:scaleType="centerInside"
            android:id="@+id/imgTopNewNam"/>
        <LinearLayout android:layout_height="160dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"

                android:id="@+id/tvTeudeTopNewNam"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvGiaSPTopNewNam"
                android:text="giaTien"
                android:textColor="@color/red"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvGiamGiaSPTopNewNam"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
